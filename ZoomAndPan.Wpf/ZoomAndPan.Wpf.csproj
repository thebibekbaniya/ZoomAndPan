    <Nullable>disable</Nullable>
    <UseWPF>true</UseWPF>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>Zoom and Pan Control for WPF</Title>
    <Version>1.0.0.0</Version>
    <Authors>Bibek Baniya</Authors>
    <Copyright>Â© 2022 Bibek Baniya</Copyright>
    <Description>This is the zoom and pan control for WPF.</Description>
    <PackageProjectUrl>https://github.com/thebibekbaniya/ZoomAndPan</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/thebibekbaniya/ZoomAndPan</RepositoryUrl>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
